{
    "manifest_version": 2,
    "name": "JS Scratch Me",
    "key": "",
    "short_name": "JS Scratch Me",
    "description": "Save any Facebook Post to simple JSON form",
    "version": "2.0",
    "homepage_url": "https://github.com/bravelab/scratchme-chrome-plugin",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "identity"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Scratch Me"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "scripts": [
            "background.js",
            "hot-reload.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://www.facebook.com/*"
            ],
            "all_frames": true,
            "js": [
                "scripts/addButtons.js"
            ],
            "css": [
                "css/main.min.css"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com/; object-src 'self'",
    "oauth2": {
        "client_id": "1011074552537-8s87oshrnidd6ca7j7lq45uokl8rod92.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    }
}