{
    "manifest_version": 2,
    "name": "JS Scratch Me",
    "short_name": "JS Scratch Me",
    "description": "Save any Facebook Post to simple JSON form",
    "version": "2.0",
    "homepage_url": "https://github.com/bravelab/scratchme-chrome-plugin",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Scratch Me"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://www.facebook.com/*"
            ],
            "all_frames": true,
            "js": [
                "scripts/addButtons.js"
            ],
            "css": [
                "css/main.min.css"
            ]
        }
    ]
}